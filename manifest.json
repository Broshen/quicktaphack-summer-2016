{
  "name": "QTS QuickLinker",
  "description": "Quickly Link Support Articles",
  "version": "1.0",
  "background":
    {
        "scripts": ["jquery.js", "content_script.js"]
    },

  "browser_action": {
    "default_title": "QTS QuickLinker",
    "default_icon": "link.png",
    "default_popup": "popup.html"
  },

  "permissions":[
    "tabs",
    "<all_urls>",
    "activeTab"
  ],

  "web_accessible_resources": ["script.js", "jquery.js", "select.html", "modal.css"],
  "manifest_version": 2
}
